<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/hello_world"
        tools:context=".MainActivity" />
    <Button 
        android:id="@+id/start_ip_checking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:text="@string/start_ip_checking"
        android:layout_centerHorizontal="true"
        />
    <Button 
        android:id="@+id/stop_ip_checking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_ip_checking"
        android:text="@string/stop_ip_checking"
        android:layout_centerHorizontal="true"
        />
    <Button 
        android:id="@+id/exfiltrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stop_ip_checking"
        android:text="@string/exfiltrate"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
